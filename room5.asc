function hTrikot_AnyClick()
{
	if (any_click_move(68, 138, eDirUp))
	{
		if (UsedAction(eActWalkTo))
		{
		//	Wait(5);
		}
		else if (UsedAction(eActLookAt))
		{
			Wait(5);
			player.Say("Das ist das Trikot von Harold 'Flash' Broning von den Ronville Dragons.");
