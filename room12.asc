function hDusche_AnyClick()
{
	if (any_click_move(90, 130, eDirUp))
	{
		if (UsedAction(eActWalkTo))
		{
		//	Wait(5);
		}
		else if (UsedAction(eActLookAt))
		{
			Wait(5);
			player.Say("Ich glaube, dass soll eine Art Dusche sein, was mich eher an einem Kühlschrank erinnert.");
			player.FaceDirection(eDirDown);
			player.Say("Ich hab doch gleich zur meiner Mum gesagt, dass solche Sachen vom Gemischwarenhändler überhaupt nichts taugen.");
			player.Say("Aber hört irgendjemand auf mich???");
			player.Say("Natürlich kein Mensch.");
		}
		else if (UsedAction(eActPickUp))
		{
			Wait(5);
			player.Say("Das fehlt mir gerade noch.");
		}
		else if (UsedAction(eActUse))
		{
			Wait(5);
			player.Say("Die ist kaputt.");
		}
		else if (UsedAction(eActOpen))
		{
			Wait(5);
			PlaySound(2);
			oDusche.Visible = true;
			Wait(10);
			player.Say("Leer.");
			Wait(10);
			oDusche.Visible = false;
			PlaySound(5);
		}
		else if (UsedAction(eActClose))
		{
			Wait(5);
			player.Say("Die ist schon zu.");
		}
		else if (UsedAction(eActPull) || UsedAction(eActPush))
		{
			Wait(5);
			player.Say("Leider kann ich sie nicht weg bewegen.");
		}
		else Unhandled();
	}
}

