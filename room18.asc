function hSchrank_AnyClick()
{
	if (any_click_move(244, 131, eDirRight))
	{
		if (UsedAction(eActWalkTo))
		{
		//	Wait(5);
		}
		else if (UsedAction(eActLookAt))
		{
			Wait(5);
			player.Say("Ein Schränkchen.");
		}
		else if (UsedAction(eActPickUp))
		{
			Wait(5);
			player.Say("Ich brauche kein Schränckchen.");
		}
		else if (UsedAction(eActUse))
		{
			Wait(5);
			player.Say("Ich wüsste nichts, was ich reinstellen könnte.");
		}
		else if (UsedAction(eActOpen))
		{
			Wait(5);
			player.Say("Das Schränckchen hat nichts, dass man öffnen könnte.");
		}
		else if (UsedAction(eActClose))
		{
			Wait(5);
			player.Say("Das Schränckchen hat nichts, dass man schließen könnte.");
		}
		else if (UsedAction(eActPull) || UsedAction(eActPush))
		{
			Wait(5);
			player.Say("Das steht da ganz gut.");
		}
		else Unhandled();
	}
}

