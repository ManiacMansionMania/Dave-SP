****************************/
function oKuehlschrank_AnyClick()
{
	if (any_click_move(65, 127, eDirUp))
	{
		if (UsedAction(eActWalkTo))
		{
		//	Wait(5);
		}
		else if (UsedAction(eActLookAt))
		{
			Wait(5);
			player.Say("OH NEIN, der Kühlschrank ist leer!");
			Wait(5);
			player.FaceDirection(eDirDown);
			Wait(5);
			player.Say("Wir werden verhungern!");
		}
		else if (UsedAction(eActPickUp))
		{
			Wait(5);
			player.Say("Coole Sache.");
			player.Say("Ein Kühlschrank zum mitnehmen.");
		}
		else if (UsedAction(eActUse))
		{
			Wait(5);
			player.Say("Ja und wie?");
		}
		else if (UsedAction(eActOpen))
		{
			Wait(5);
			player.Say("Der ist schon offen.");
		}
		else if (UsedAction(eActClose))
		{
			Wait(5);
			PlaySound(5);
			oKuehlschrank.Visible = false;
		}
		else if (UsedAction(eActPull) || UsedAction(eActPush))
		{
			Wait(5);
			player.Say("Nein Danke.");
		}
		else Unhandled();
	}
}

