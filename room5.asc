		else if (UsedAction(eActOpen))
		{
			Wait(5);
			player.Say("Und meinen wertvollsten Besitz beschädigen? Auf keinen Fall!");
		}
		else if (UsedAction(eActClose))
		{
			Wait(5);
			player.Say("Ein Trikot schließen, wie?");
		}
		else if (UsedAction(eActPull))
		{
			Wait(5);
			player.Say("Ich will es nicht beschädigen, versteh es doch!");
		}
		else if (UsedAction(eActPush))
		{
			Wait(5);
			player.Say("Es gibt keinen Grund das Trikot zu drücken.");
		}
		else Unhandled();
	}
}

