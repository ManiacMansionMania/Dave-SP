/****************************
*   Raum-Funktionen
****************************/
function room_Load()
{
	oTuerFlur.init_object(3);
	oTuerKueche.init_object(4);

	PlayMusic(23);
}


/****************************
*   Tür-Hotspot-Funktionen
****************************/
function hTuerFlur_AnyClick()
{
	SetDoorStrings("Die Tür zum Flur.", "", "Damit klappt das nicht.");
	if ( any_click_on_door(3, oTuerFlur, 43, 123, eDirLeft, 6, 290, 132, eDirLeft) == 0 ) Unhandled();
	SetDoorStrings("", "", ""); // strings leeren, um beim Vergessen keinen falschen Satz sagen zu lassen.
}

function hTuerKueche_AnyClick()
{
	SetDoorStrings("Die Tür zur Küche. --- Frag mich bloß nicht, warum neben das Schlafzimmer die Küche eingerichtet wurden ist.", "", "Damit klappt das nicht.");
	if ( any_click_on_door(4, oTuerKueche, 292, 120, eDirRight, 9, 29, 128, eDirRight) == 0 ) Unhandled();
	SetDoorStrings("", "", ""); // strings leeren, um beim Vergessen keinen falschen Satz sagen zu lassen.
}


/****************************
*   Objekt-Funktionen
****************************/
function oSchrank_AnyClick()
{
	if (any_click_move(250, 118, eDirUp))
	{
		if (UsedAction(eActWalkTo))
		{
		//	Wait(5);
		}
		else if (UsedAction(eActLookAt))
		{
			Wait(5);
			player.Say("Da ist nichts drin.");
		}
		else if (UsedAction(eActPickUp))
		{
			Wait(5);
			player.Say("Ha, ha, ha.");
		}
		else if (UsedAction(eActUse))
		{
			Wait(5);
			player.Say("Soll ich es öffnen oder schließen?");
		}
		else if (UsedAction(eActOpen))
		{
			Wait(5);
			player.Say("Der ist schon geöffnet.");
		}
		else if (UsedAction(eActClose))
		{
			Wait(5);
			PlaySound(3);
			oSchrank.Visible = false;
		}
		else if (UsedAction(eActPull) || UsedAction(eActPush))
		{
			Wait(5);
			player.Say("Ich will mir keinen Bruch holen.");
		}
		else Unhandled();
	}
}


